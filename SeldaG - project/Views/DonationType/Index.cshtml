@model IEnumerable<SeldaG___project.Models.DonationType>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Donation Types</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-outline-primary">
                Create New Donation Type
            </a>
        </div>
    </div>

    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Donation Type
                    </th>
                    <th>
                        Details
                    </th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="30%">@obj.Name</td>
                    <td width="50%">@obj.Details</td>

                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">


                            <a asp-controller="DonationType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2" style="align-self">
                                <i class="fas fa-trash"></i>
                            </a>

                        </div>
                    </td>
                </tr>
                }
           </tbody>
         </table>
    }
    else
    {
        <p> No donation!</p>
    }

</div>
