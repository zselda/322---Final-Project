@model IEnumerable<SeldaG___project.Models.School>

@{
int intSno = 0;
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">School List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="School" asp-action="Create" class="btn btn-outline-primary">
                <i class="fas fa-plus-circle"></i>  &nbsp; Create New Donation
            </a>
        </div>
    </div>

    <br /><br />
    
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        
                    </th>
                    <th>
                        School Names
                    </th>
                    <th>
                        Details
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    intSno = intSno + 1;
                    <tr>
                        <td>
                            @intSno
                        </td>
                        <td width="30%">@obj.Name</td>
                        <td width="50%">@obj.Details</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">

                                <a asp-controller="School" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-pen-square"></i>
                                </a>
                                <a asp-controller="School" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash"></i>
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No donation!</p>
    }

</div>
